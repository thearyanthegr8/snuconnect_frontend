generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model GPS {
  id             BigInt    @id @default(autoincrement())
  created_at     DateTime  @default(now()) @db.Timestamptz(6)
  LAT            Float?
  LONG           Float?
  updated_at     DateTime? @db.Timestamptz(6)
  assigned_route BigInt
}

model Route {
  id         String       @id @default(nanoid(7))
  route_name String
  RouteStops RouteStops[]
}

model Stops {
  id         String       @id @default(nanoid(7))
  Stop_name  String
  lat        Float
  long       Float
  RouteStops RouteStops[]
}

model RouteStops {
  route_id String
  stops_id String
  route    Route  @relation(fields: [route_id], references: [id], onDelete: Cascade)
  stops    Stops  @relation(fields: [stops_id], references: [id], onDelete: Cascade)
  stop_order Int

  @@id([route_id, stops_id])
  @@map("RouteStops")
}
